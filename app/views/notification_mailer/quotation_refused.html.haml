.mui--text-body1
  - if @quotation.refuse_reason != "other"
    = raw t(".infos_with_reason", { reason: h(t("activerecord.attributes.refuse_reason.values.#{@quotation.refuse_reason}")) })
  - else
    = t(".infos")

- if @quotation.refuse_comment.present?
  %br
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tr
      %td.mui-citation
        = format_text(@quotation.refuse_comment)

.mui--text-center.mui-link
  %a.mui-btn.mui-btn--primary{:href => "#{quotation_url(@quotation)}", :target => "_blank"}= t('.show_quotation')
