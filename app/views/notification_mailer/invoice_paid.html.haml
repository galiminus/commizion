.mui--text-body1
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tr
      %td.mui-citation
        %strong Price
        %br
        = @invoice.price
        %br
        %br
        %strong Due date
        %br
        = @invoice.due_date.strftime("%F")

      %td
        %strong Currency
        %br
        = @invoice.currency_uid
        %br
        %br
        %strong Paypal address
        %br
        - if @invoice.quotation.commissioner.billing_paypal_address.present?
          = @invoice.quotation.commissioner.billing_paypal_address.present?
        - else
          Ask the commissioner

.mui--text-body1
  = t(".infos")

.mui--text-center.mui-link
  %a.mui-btn.mui-btn--primary{:href => "#{quotation_url(@invoice.quotation)}", :target => "_blank"}= t('.show_quotation')
